@{
    Layout = null;
}
@model List<CategoryViewModel>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <style>
        body {
            font-family: 'Comfortaa', cursive;
            background: #fafafa;
            margin: 0;
            padding: 0;
        }

        .fixed-bottom-menu {
            overflow: hidden;
            background-color: #FF33CC;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .table {
            display: table;
            margin: 0 auto;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                margin: 5px 10px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #FE6BFE;
                    border-radius: 50%;
                }

        .active {
            background-color: #FE6BFE;
            border-radius: 50%;
        }

        #category-container {
            margin: 2em auto;
            margin-top: 120px;
            display: flex;
            flex-wrap: wrap;
            max-width: 800px;
            min-height: 50px;
            max-height: 100px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 0 5px rgb(196, 196, 196);
        }

        .img-container {
            width: 100px;
            flex: 1;
            cursor: pointer;
            align-content: center;
            text-align: center;
            border-bottom: 3px solid white;
            border-radius: 5px;
        }

        .action-container {
            width: 30px;
            flex: 1;
            cursor: pointer;
            text-align: left;
            border-bottom: 3px solid white;
            border-radius: 5px;
        }

        .icon {
            width: 27px;
            margin-top: 15%;
        }

        .orange {
            color: orange;
        }

        .blue {
            color: blue;
        }

        .red {
            color: red;
        }

        .green {
            color: green;
        }

        .pink {
            color: pink;
        }

        .mediumpurple {
            color: mediumpurple;
        }

        .yellow {
            color: yellow;
        }

        .btn-sm {
            background-color: #ffffff;
            margin-top: 10px;
            font-size: 14px;
        }

        .dropdown-menu {
            left: 50px;
            min-width: 110px;
        }

        .open > .dropdown-menu {
            display: grid;
        }
    </style>
</head>
<body>
    <div class="fixed-bottom-menu">
        <div class="table">
            <ul>
                <li><a style="border-radius:50%; margin-left:500px;" title="Etkinlikler" asp-controller="Activity" asp-action="List"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                <li><a class="active" title="Kategoriler"><i class="fa fa-sliders"></i></a></li>
            </ul>
        </div>
    </div>
    @{

    }
    <section id="category-container">
        @{
            string[] feathers = { "triangle", "monitor", "aperture", "slack", "activity", "box", "hexagon" };
            string[] colors = { "orange", "blue", "red", "green", "pink", "mediumpurple", "yellow" };
            var index = 0;
            var categoryName = "";
            foreach (var category in Model)
            {

                <div class='img-container'>
                    <i class='icon @colors[index]' data-feather="@feathers[index]"></i>
                    <p id="pCategory">@category.Name</p>
                </div>
                index = index + 1;
                <div class="action-container">
                    <div class="dropdown">
                        <button class="btn btn-sm btn-icon" data-toggle="dropdown" type="button">
                            <i class='icon' data-feather="more-vertical"></i>
                        </button>

                        <div class="dropdown-menu">
                            @{
                                categoryName = category.Name;
                            }
                            <!--Open the modal-->
                            <a onclick="popUp('@categoryName')" data-toggle="modal" data-target="#editModal" style="color:#333; margin-left:10px;" class="dropdown-item"><i class='icon blue' data-feather="edit"></i>Düzenle</a>

                            <a onclick="deleteCategory('@category.Name')" style="color:#333; margin-left:10px;" class="dropdown-item"><i class='icon red' data-feather="x-square"></i>Sil</a>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="action-container">
            <!--Open the modal-->
            <a data-toggle="modal" data-target="#addModal"><i style="color:green" class="icon" data-feather="plus-square"></i></a>
            <p>Ekle</p>
        </div>
    </section>

    <!--Add Modal-->
    <div class="modal fade" id="addModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header" style="padding:10px;">
                    <h5 class="modal-title">Yeni Kategori</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="text" id="cName" placeholder="Kategori adı giriniz" />
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" id="btnAdd" class="btn btn-primary" data-dismiss="modal">Kaydet</button>
                </div>

            </div>
        </div>

    </div>

    <!--Edit Modal-->
    <div class="modal fade" id="editModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header" style="padding:10px;">
                    <h5 class="modal-title">Kategori Güncelle</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Eski kategori : <label id="oldCategory"></label>
                    <br />
                    Yeni kategori : <input type="text" id="newCategory" />
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" id="btnEdit" class="btn btn-primary" data-dismiss="modal">Kaydet</button>
                </div>

            </div>
        </div>

    </div>

    <script>

        feather.replace()



        $("#btnAdd").click(function () {
            //--------- JSON Verisini Oluşturdum--------------------
            var Name = $('#cName').val();
            var category = {
                "Name": Name
            };
            console.log(category);
            $.ajax({
                url: '@Url.Action("Add", "Category")',
                type: 'POST',
                dataType: 'json',
                data: category,
                success: function (data) {
                    console.log(data);
                    location.reload();
                }
            });
        });
        function popUp(categoryName) {

            $("#oldCategory").html(categoryName);
        }
        $('#btnEdit').click(function () {

            var oldName = $('#oldCategory').text();
            var newName = $('#newCategory').val();

            var category = {
                "OldName": oldName,
                "NewName": newName
            }

            if (oldName != newName) {
                $.ajax({
                    url:'@Url.Action("Update","Category")',
                    type:'POST',
                    dataType:'json',
                    data:category,
                    success: function (data) {
                        console.log(data);
                    }
                });
            }
            else {
                console.log("eşit");
            }
        });
        function deleteCategory(name) {
            //--------- JSON Verisini Oluşturdum--------------------
            var category = {
                "Name": name
            };
            console.log(category);
            $.ajax({
                url: '@Url.Action("Delete", "Category")',
                type: 'POST',
                dataType: 'json',
                data: category,
                success: function (data) {
                    console.log(data);
                    location.reload();
                }
            });
        }

    </script>
</body>
</html>
