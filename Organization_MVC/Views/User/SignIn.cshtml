@model UserViewModel
<html>
<head>
    <style>

        body {
            background: rgb(246, 246, 246);
            font-family: 'Comfortaa', cursive;
            color: #2f2c2c;
        }

        .wrapper {
            font-family: 'Comfortaa', cursive;
            width: 250px;
            font-size: 13px;
            color: #d0021b;
            line-height: 15px;
            padding: 14px 20px 13px;
            margin-bottom: 15px;
            align-items: center;
            border: 1px solid;
            border-radius: 3px;
            background-color: #fff4f6;
        }

        .login {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
            font-family: 'Comfortaa', cursive;
            border-radius: 50px;
        }

        .form {
            position: relative;
            z-index: 1;
            border-radius: 10px;
            max-width: 800px;
            margin: 0 auto 100px;
            padding: 45px;
            border-radius: 50px;
            background: rgb(242,242,242);
            box-shadow: -11px 11px 22px #bebebe, 11px -11px 22px #ffffff;
        }

            .form input {
                outline: 0;
                background: rgb(242,242,242);
                width: 100%;
                border: 0;
                border-radius: 5px;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
                font-family: 'Comfortaa', cursive;
            }

                .form input:focus {
                    background: rgb(242,242,242);
                }

            .form button {
                font-family: 'Comfortaa', cursive;
                outline: 0;
                text-transform: uppercase;
                background: rgb(242,242,242);
                width: 100%;
                border: 0;
                border-radius: 5px;
                padding: 15px;
                font-size: 14px;
                cursor: pointer;
            }

                .form button:active {
                    background: rgb(242,242,242);
                }

        input[type="checkbox"] {
            appearance: checkbox;
            display: inline-block;
            width: auto;
        }

    </style>
</head>
<body>
    <div class="login">
        <div class="form">
            <form class="login-form" method="post" asp-action="SignIn">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @{
                    if (ViewData["signIn"] != null)
                    {
                        <div class="wrapper">
                            Email adresiniz ve/veya şifreniz hatalı.
                        </div>
                    }

                }
                <div>
                    <input asp-for="Email" type="text" value=@ViewData["email"] placeholder="e-posta" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="Password" type="password" value=@ViewData["password"] placeholder="şifre" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <input type="checkbox" asp-for="Check" value="checked">
                    <label style="text-align:left; font-size:smaller; color:rgb(118, 118, 118)">Beni hatırla</label>
                </div>
                <br />
                <div class="form-group">
                    <button>Giriş Yap</button>
                </div>
                <br />
                <div>
                    <p style="font-size:smaller;">
                        Hesabın yok mu?
                        <a style="color:#dd3be2;" asp-action="SignUp">Kayıt Ol</a>
                    </p>
                </div>
            </form>

        </div>
    </div>
    @section Scripts{
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
